<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous">
        </script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <title>Pagina Principal</title>
</head>

<body>
    <div class="container">
        <h1 class="text-center mt-3 mb-3">
            <%= title %>
        </h1>

        <% if(action=='add' ) { %>

            <% } else { %>

                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col">Home principal</div>
                            <div class="col"></div>
                        </div>
                        <div>
                            <a href="logout">Logout</a>
                            <a href="form_save_models">Añadir nuevos modelos</a>
                        </div>
                        <div id="ahref">
                            <a href="mails_registered">Ver Correos Registrados</a>
                            <a href="reg_new_mail">Registrar nuevos correos</a>
                            <a href="active_accounts">Cuentas Activas</a>
                            <a href="paper_bin">Papelera</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <tr>
                                    <th>Id usuario</th>
                                    <th>Id modelos</th>
                                    <th>Visualizar Modelos</th>
                                    <th>Actualizar GLB</th>
                                    <th>Actualizar USDZ</th>
                                    <th>Eliminar</th>

                                </tr>
                                <% if(home_principal.length> 0)
                                    {
                                    home_principal.forEach(function(data){
                                    %>
                                    <tr>
                                        <td>
                                            <%= data.user_id %>
                                        </td>
                                        <td>
                                            <%= data.id_modelos %>
                                        </td>
                                        <td>
                                            <form action="/ar_web" method="get" id="form_">
                                                <input type="hidden" name="id_model" id="id_model"
                                                    value=<%=data.id_modelos%>>
                                                <input type="hidden" name="id_user" id="id_user"
                                                    value=<%=data.user_id%>>
                                                <button type="submit" class="btn btn-light">Visualizar</button>
                                            </form>
                                        </td>
                                        <td>
                                            <form action="/update_data_glb" method="post">
                                                <input type="hidden" name="update_glb" id="update_glb"
                                                    value=<%=data.modelo_glb%>>
                                                <input type="hidden" name="id_modelos" id="id_modelos"
                                                    value=<%=data.id_modelos%>>
                                                <button type="submit" class="btn btn-light">Actualizar</button>
                                            </form>
                                        </td>
                                        <td>
                                            <form action="/update_data_usdz" method="post">
                                                <input type="hidden" name="update_usdz" id="update_usdz"
                                                    value=<%=data.modelo_usdz%>>
                                                <input type="hidden" name="id_modelos" id="id_modelos"
                                                    value=<%=data.id_modelos%>>
                                                <button type="submit" class="btn btn-light">Actualizar</button>
                                            </form>
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-dark" type="submit"
                                                onclick="Delete('<%=data.id_modelos%>','<%=data.modelo_glb %>','<%=data.modelo_usdz %>')">Eliminar</button>
                                        </td>

                                    </tr>
                                    <% }); } else { %>
                                        <tr>
                                            <td colspan="5">No Data Found</td>
                                        </tr>
                                        <% } %>
                            </table>
                        </div>
                    </div>
                </div>

                <% } %>

    </div>



    <script>
        var load = "<%=load%>";

        if (load) {
            console.log(load);
            document.getElementById("ahref").style.visibility = "visible";
        } else {
            console.log(load);
            document.getElementById("ahref").style.visibility = "hidden";
        }
    </script>

    <script>
        function Delete(id_modelo, glb, usdz) {
            Swal.fire({
                title: '¿Estas seguro?',
                text: "No podras recuperar este archivo",
                icon: 'warning',
                showCancelButton: true,
                cancelButtonText: 'cancelar',
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Si, borrar!'
            }).then((result) => {
                if (result.isConfirmed) {

                    window.location = '/delete_data?id_modelo=' + id_modelo + '&glb=' + glb + '&usdz=' + usdz;
                    //'/delete_data?id_modelo='+id_modelo+'&glb='+glb+'&usdz='+usdz
                }
            })
        }


    </script>


</body>

</html>